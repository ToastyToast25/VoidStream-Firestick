<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="#00000000" />
                    <stroke android:width="3dp" android:color="@color/theme_accent" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="#00000000" />
            <stroke android:width="2dp" android:color="#80AA5CC3" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="#00000000" />
            <stroke android:width="1.5dp" android:color="#40FFFFFF" />
        </shape>
    </item>
</selector>
